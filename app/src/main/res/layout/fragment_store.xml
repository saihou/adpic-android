<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/avatar_placeholder"
            android:layout_margin="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/profile_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:text="John Doe"
            android:layout_alignTop="@id/profile_pic"
            android:id="@+id/profile_username"
            android:padding="4dp"
            android:layout_toRightOf="@id/profile_pic"
            android:layout_toEndOf="@id/profile_pic"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Write something about yourself..."
            android:id="@+id/profile_desc"
            android:padding="4dp"
            android:layout_below="@id/profile_username"
            android:layout_alignLeft="@id/profile_username"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/profile_desc"
            android:layout_alignLeft="@id/profile_username">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="61 posts"
                android:textColor="@color/ColorPrimaryDark"
                android:id="@+id/profile_num_posts"
                android:layout_centerVertical="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:drawableEnd="@drawable/ic_edit_black_24dp"
                android:text="Edit"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/profile_edit"
                android:padding="4dp"
                android:layout_marginRight="12dp"
                android:layout_alignTop="@id/profile_num_posts"/>

        </RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/profile_tabs"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:background="@color/ColorAccent"
        app:tabIndicatorColor="@color/ColorPrimaryDark"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/store_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
