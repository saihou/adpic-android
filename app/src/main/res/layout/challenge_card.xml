<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/challenge_card"
        android:elevation="4dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/picture"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:text="Diamond Peak"
                android:id="@+id/merchant_name"
                android:padding="4dp"
                android:layout_toRightOf="@id/picture"
                android:layout_toEndOf="@id/picture"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/merchant_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingRight="50dp"
                android:id="@+id/distance_layout"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_group_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99 mi"
                    android:id="@+id/challenge_distance"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:id="@+id/challenge_participants"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 days left"
                android:paddingLeft="4dp"
                android:id="@+id/challenge_duration"
                android:layout_below="@id/merchant_name"
                android:layout_alignLeft="@id/merchant_name"
                android:layout_alignStart="@id/merchant_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingLeft="4dp"
                android:text="Take part and stand to win prizes"
                android:id="@+id/caption"
                android:singleLine="true"
                android:maxEms="15"
                android:layout_below="@id/challenge_duration"
                android:layout_alignLeft="@id/merchant_name"
                android:layout_alignStart="@id/merchant_name"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/caption"
                android:visibility="gone">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="?attr/borderlessButtonStyle"
                    android:minHeight="36dp"
                    android:text="Uber"
                    android:id="@+id/challenge_uber"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="?attr/borderlessButtonStyle"
                    android:minHeight="36dp"
                    android:text="Later"
                    android:id="@+id/challenge_later"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="?attr/borderlessButtonStyle"
                    android:text="Details"
                    android:minHeight="36dp"
                    android:id="@+id/challenge_details"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:text="Join"
                    android:id="@+id/challenge_join"
                    android:backgroundTint="@color/ColorAccent"
                    />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

